<div class="container">

  <h1><%= @cocktail.name %> <%= link_to @cocktail, method: :delete, data: { confirm: "Are you sure?" } do %>
       <i class="fa fa-trash destroy_cocktail"></i>
      <% end %></h1>
 
    <%= link_to "Add Ingredientes", new_cocktail_dose_path(@cocktail), class: 'btn btn-info'%>

    <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3 class="subtitle">Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <%# <td>= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill</td> %>
              <td>
                <%= link_to dose, method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
    <%= link_to "Back to all cocktails", root_path, class: 'btn btn-secondary btn-sm' %>

  <%# FALTA COLOCAR REVIEWS AQUI EMBAIXO %>
  
</div>

